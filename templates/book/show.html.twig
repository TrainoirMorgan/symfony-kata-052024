{% extends 'base.html.twig' %}

{% block title %}{{book}}{% endblock %}

{% block body %}
    <h1>Détails du Livre {{book}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Date de Publication</th>
                <td>{{ book.publishedDate ? book.publishedDate|date('Y-m-d') : 'N/A' }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ book.isbn }}</td>
            </tr>
            <tr>
                <th>Ajouté par</th>
                <td>{{ book.addedBy ? book.addedBy.email : 'N/A' }}</td>
            </tr>
        </tbody>
    </table>

    
{% endblock %}
